@model HW8.Models.Race
@{
    ViewBag.Title = "Add Race";
}

<div>
    <h2>@ViewBag.Title</h2>
    <br />

    @using (Html.BeginForm())
    {
        <div class="form-group">
            <h4>Athlete</h4>
            @Html.DropDownListFor(model => model.AthleteId, new SelectList(ViewBag.Athletes, "Id", "AthleteName"))
        </div>

        <div class="form-group">
            <h4>Meet</h4>
            @Html.DropDownListFor(model => model.MeetId, new SelectList(ViewBag.Meets, "Id", "MeetLocation"))
        </div>

        <div class="form-group">
            <h4>Event</h4>
            @Html.DropDownListFor(model => model.Event, new SelectList(ViewBag.Races))
        </div>

        <div class="form-group">
            <h4>Time</h4>
            @Html.EditorFor(model => model.RecordedTime, new { htmlAttributes = new { @type = "number", @min = "0", @max = "999.99", @step = "0.01", @value = "0" } })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    }

    <p>@ViewBag.Success</p>
</div>
