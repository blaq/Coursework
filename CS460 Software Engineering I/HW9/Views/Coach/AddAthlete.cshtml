@model HW8.Models.Athlete
@{
    ViewBag.Title = "Add Athlete";
}

<div>
    <h2>@ViewBag.Title</h2>
    <br />

    @using (Html.BeginForm())
    {
        <div class="form-group">
            <h4>Athlete's Name</h4>
                @Html.EditorFor(model => model.AthleteName)
                @Html.ValidationMessageFor(model => model.AthleteName)
        </div>

        <div class="form-group">
            <h4>Gender</h4>
            @{
                var list1 = new List<SelectListItem>();
                list1.Add(new SelectListItem { Text = "Boys", Value = "Boys" });
                list1.Add(new SelectListItem { Text = "Girls", Value = "Girls" });
            }
            @Html.DropDownListFor(model => model.Gender, list1)
        </div>


        <div class="form-group">
            <h4>Team</h4>
            @Html.DropDownListFor(model => model.TeamId, new SelectList(ViewBag.Teams, "Id", "TeamName"))
        </div>

        <div class="form-group">
            <input type="submit" value="Add" class="btn btn-default" />
        </div>
    }

    <p>@ViewBag.Success</p>

</div>

