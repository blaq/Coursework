@model IEnumerable<HW8.Models.AthleteViewModel>

@{
    ViewBag.Title = "Athlete";
}

<div>
    <h2>@ViewBag.Title: @ViewBag.CurrentAthlete</h2>
    <br />

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MeetDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeetTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
        </tr>

        @foreach (var item in Model.OrderByDescending(g => g.MeetDate))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MeetDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MeetTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
            </tr>
        }
    </table>
</div>